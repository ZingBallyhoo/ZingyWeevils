@page "/"

<!DOCTYPE html>
<html lang="en">
<head>
	<title>Weevil World</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta property="og:title" content="Weevil World" />
	<meta property="og:type" content="website" />
	<meta property="og:image" content="/assets/ww/logo_beta.png" />
	<meta property="og:description" content="Weevil World by Zingy" />
	<meta name="description" content="Weevil World by Zingy">
	<style>
        html {
          position: relative;
          min-height: 100%;
        }
        body {
          margin-bottom: 70px !important; /* Margin bottom by footer height */
        }
        .header {
          justify-content: center;
          background-color: #303030;
        }
        .footer {
          position: absolute;
          bottom: 0;
          width: 100%;
          height: 60px; /* Set the fixed height of the footer here */
          line-height: 60px; /* Vertically center the text there */
          background-color: #305214;
        }
        .poggers-row {
          margin-right: 0 !important;
          padding-left: 15px !important;
        }
        .hero-container {
           max-width: 990px !important; /* pepega */
           min-width: 600px;
           padding-bottom: 15px;
        }
        .hero-image {
          max-width: 100%;
          max-height: 100%;
          width: auto;
          height: auto;
        }
        .hero-text {
          font-size: 6rem;
          text-shadow: 0 2px 2px rgb(0 0 0 / 50%);
        }
        .hero-sub-text {
          font-size: 2rem;
          text-shadow: 0 2px 2px rgb(0 0 0 / 50%);
        }
        .hero-image-overlay {
          position: absolute;
          top: 0;
          right: 15px;
          bottom: 15px;
          left: 15px;
          background-color: #000000A1;
          transition: background-color 0.25s linear;
        }
        .hero-image-overlay:hover {
        	background-color: #00000070;
        }
        .link-unstyled, .link-unstyled:link, .link-unstyled:hover {
          color: inherit;
          text-decoration: inherit;
        }
        
        @@media (max-width: 616px) {  
          .hero-sub-text { font-size:1rem; }
          .hero-container { min-width: 310px; }
        }        
	</style>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/4.6.0/darkly/bootstrap.min.css" integrity="sha512-A/WvCV75maYUI3F3yjeSqYg0dUIepPRx14Qw8EZjJ/udG5/s3uDWLHnm1FSbYzrJg4RLdAdEm/f6+1V6AxCBJQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body style="background-color: #004666;">
<div>
	<div class="align-items-center row poggers-row header">
		<div class="col text-right"><img src="/assets/ww/logo_beta.png" alt="Weevil World Logo" width="140" height="95"></div>
		<div class="col-auto" style="font-size: 5rem">+</div>
		<div class="col">
			<a href="https://github.com/zingballyhoo">
				<img src="https://avatars.githubusercontent.com/u/13888932?v=4" alt="Zingy Avatar" width="75" height="75">
			</a>
		</div>
	</div>
	<div class="row-auto text-center p-5" style="font-size: 1.25rem">
		There is no account system, simply choose a username and put something (e.g 1 character) for the password. All data is discarded after you log out.
	</div>
	<div class="row poggers-row justify-content-center">
		<div class="col text-right hero-container">
			<a href="/old" class="link-unstyled">
				<img class="hero-image" src="homepage_2018.png" width="960" height="600" alt="2018 Weevil World">
				<div class="align-items-center d-flex flex-column hero-image-overlay justify-content-center">
					<span class="hero-text">2018</span>
					<p class="hero-sub-text text-center">Play games against others to win mulch</p>
                </div>
			</a>
		</div>
		<div class="col text-left hero-container">
			<a href="/new" class="link-unstyled">
            	<img class="hero-image" src="homepage_2019.png" width="960" height="600" alt="2019 Weevil World">
            	<div class="align-items-center d-flex flex-column hero-image-overlay justify-content-center">
                	<span class="hero-text">2019</span>
                    <p class="hero-sub-text text-center">Parkour and collect bubbles for coins</p>
                </div>
            </a>
		</div>
	</div>
</div>
<div class="footer"></div>
</body>
</html>